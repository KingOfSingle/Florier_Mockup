<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/form_btn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/form"
                        android:alpha="0.6" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="폼 플라워"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/text_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  꽃송이가 독특하거나 강렬해서 꽃의 포인트가 되나 꽃잎이 상하면 그 형태를 잃게 될 정도의 꽃."
                    android:textColor="#eaafaf"
                    android:textSize="17dp"/>

                <ListView
                    android:id="@+id/list_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/mass_btn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/mass"
                        android:alpha="0.6"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매스 플라워"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/text_mass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  많은 꽃잎이 모여서 하나의 덩어리를 이룬 꽃을 말한다."
                    android:textColor="#eaafaf"
                    android:textSize="17dp"/>
                <ListView
                    android:id="@+id/list_mass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/line_btn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/line"
                        android:alpha="0.6"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="라인 플라워"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/text_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  꽃의 줄기가 곧고 키가 커서 선의 형태를 나타낼 수 있는 꽃."
                    android:textColor="#eaafaf"
                    android:textSize="17dp"/>
                <ListView
                    android:id="@+id/list_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/fill_btn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/fill"
                        android:alpha="0.6"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="필러 플라워"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/text_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하나의 줄기에 자잔한 꽃들이 밀집되어 있어서 빈 공간을 메우는데 사용할 수 있다."
                    android:textColor="#eaafaf"
                    android:textSize="17dp"/>
                <ListView
                    android:id="@+id/list_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_order"
        android:layout_marginBottom="12dp"/>

</RelativeLayout>