<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="190dp">
        <View
            android:id="@+id/flower_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="120dp"/>
        <LinearLayout
            android:id="@+id/select_info"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/flower_img"
            >
            <TextView
                android:id="@+id/tx_flower_name"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="꽃이름"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_up"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="up"
                    android:layout_toRightOf="@+id/tx_count"
                    android:layout_below="@id/flower_img"
                    />
                <TextView
                    android:id="@+id/tx_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/tx_flower_name"
                    android:gravity="center"
                    android:hint="0"
                    android:layout_below="@id/flower_img"
                    />
                <Button
                    android:id="@+id/btn_down"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="down"
                    android:layout_toLeftOf="@+id/tx_count"
                    android:layout_below="@id/flower_img"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_input"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="입력"
            android:layout_below="@+id/select_info"
            android:layout_alignRight="@+id/select_info"
            />
        <TextView
            android:id="@+id/tx_flower_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="가격"
            android:layout_below="@+id/select_info"
            android:layout_toLeftOf="@+id/btn_input"
            android:layout_alignBaseline="@+id/btn_input"
            />
    </RelativeLayout>
</LinearLayout>