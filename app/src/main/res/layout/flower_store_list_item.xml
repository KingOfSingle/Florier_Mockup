<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <View
            android:id="@+id/flower_store_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tx_flower_store_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:text="데일리 플라워"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/tx_flower_store_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            android:text="010-9934-1111"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tx_flower_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="150dp"
            android:text="서울시 강서구 가양동 239"
            android:textSize="20dp"/>

    </RelativeLayout>
</LinearLayout>
